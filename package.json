{
  "name": "azure-openai-playground",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "exports": "./src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "declarations": "rimraf types/ && tsc --emitDeclarationOnly",
    "dev": "cross-env NODE_ENV=development LOCAL_DEV=true tsx --trace-warnings ",
    "prod": "cross-env NODE_ENV=production ts-node ",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc --noEmit",
    "typedoc": "typedoc --out docs --entryPointStrategy expand ./src --excludeInternal false --excludeNotDocumented false --plugin typedoc-plugin-markdown --readme none",
    "typedoc-html": "typedoc --out docs/docs --entryPointStrategy expand ./src --excludeInternal false --excludeNotDocumented false --readme none"
  },
  "engines": {
    "node": ">= 18.x",
    "npm": ">= 8.x"
  },
  "keywords": [],
  "author": {
    "name": "Michael Sprague",
    "email": "ms388@cornell.edu"
  },
  "license": "MIT",
  "dependencies": {
    "common-tags": "1.8.2",
    "cross-env": "7.0.3",
    "dayjs": "1.11.7",
    "dotenv": "16.0.3",
    "got": "12.6.0",
    "openai": "3.2.1",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.21.5",
    "@swc/core": "1.3.56",
    "@types/common-tags": "1.8.1",
    "@types/node": "18.16.3",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "5.59.2",
    "@typescript-eslint/parser": "5.59.1",
    "cross-env": "7.0.3",
    "cz-git": "1.6.1",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "nodemon": "2.0.22",
    "prettier": "2.8.8",
    "prettier-eslint": "15.0.1",
    "ts-node": "10.9.1",
    "tsx": "3.12.7",
    "typedoc": "0.24.6",
    "typedoc-plugin-markdown": "3.15.3",
    "typescript": "5.0.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": false,
      "commonjs": false,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@typescript-eslint/strict",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "import",
      "prettier"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": "latest",
      "allowImportExportEverywhere": true,
      "parser": "@typescript-eslint/parser",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      },
      "sourceType": "module"
    },
    "ignorePatterns": [
      "**/.history/*",
      "**/node_modules/*"
    ],
    "rules": {}
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": true,
    "tabWidth": 2
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  }
}
